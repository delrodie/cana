{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-sm-6 auth-box mt-md-5">
        <div class="proclinic-box-shadow">
            <h3 class="widget-title">Param√®tres de connexion</h3>
        </span>
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'login-form' } }) }}

                <div class="form-group row">
                    <div class="col-sm-12">
                        {{ form_widget(form.current_password, {'attr':{'class': 'form-control', 'required':'required', 'autocomplete':'new-password', 'placeholder':"Mot de passe actuel"}})}}
                        <span class="text-danger">{{ form_errors(form.current_password)}}</span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        {{ form_widget(form.plainPassword.first, {'attr':{'class': 'form-control', 'required':'required', 'autocomplete':'new-password', 'placeholder':"Nouveau mot de passe"}})}}
                        {{ form_errors(form.plainPassword.first)}}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        {{ form_widget(form.plainPassword.second, {'attr':{'class': 'form-control', 'required':'required', 'autocomplete':'new-password', 'placeholder':"Repeter le mot de passe"}})}}
                        {{ form_errors(form.plainPassword.second)}}
                    </div>
                </div>
                {{ form_widget(form) }}
                <div class="button-btn-block">
                    <div class="row">
                        <div class="col-sm-6">
                            <a href="{{ path('homepage') }}" class="btn btn-secondary btn-lg btn-block">Annuler</a>
                        </div>
                        <div class="col-sm-6">
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="{{ 'change_password.submit'|trans }}">
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>



