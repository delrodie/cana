{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Gestion des clients {% endblock %}

{% block body %}
    <div class="container mt-0">
        <div class="row breadcrumb-bar">
            <div class="col-md-6">
                <h3 class="block-title">Gestion de clients</h3>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ absolute_url(path('homepage')) }}">
                            <span class="ti-home"></span>
                        </a>
                    </li>
                    <li class="breadcrumb-item">clients</li>
                    <li class="breadcrumb-item active">clients</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="widget-area-2 proclinic-box-shadow">
                    <h3 class="widget-title">{{ client.nom }} {{ client.prenoms }}</h3>
                    <div class="row mb-2">
                        <div class="col-md-12 text-right">
                            <a href="{{ absolute_url(path('client_index')) }}" class="btn btn-primary mt-3 mb-0"><span class="ti-list"></span> Liste</a>
                            <!--<a href="{{ absolute_url(path('facture_new')) }}" class="btn btn-primary mt-3 mb-0"><span class="ti-write"></span> Facturation</a>
                            <a href="{{ absolute_url(path('client_index')) }}" class="btn btn-primary mt-3 mb-0"><span class="ti-credit-card"></span> Reglement</a>-->
                        </div>
                    </div>
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-success alert-dismissible text-center fade show mt-2" role="alert">
                            <strong>{{ message }} </strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}
                    <div class="row">
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_client_marque">Assurance</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{ client.assurance.libelle }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_client_reference">Nom</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{ client.nom }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_client_genre">Prenoms</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{ client.prenoms }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_client_montant">Statut</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{ client.sexe }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_client_stock">Localisation</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{ client.adresse }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_client_stock">Contact</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" value="{{ client.tel }}" readonly>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" value="{{ client.cel }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-check col-md-10 mb-2">
                            <div class="row">
                                <div class="col-md-6"></div>
                                <div class="col-md-4">
                                    <div class="text-left">
                                        <div class="custom-control custom-checkbox">
                                            {% if client.statut %}
                                                <span class="badge badge-success">Activé</span>
                                            {% else %}
                                                <span class="badge badge-danger">Désactivé</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12 mb-5 text-right">
                        <a href="{{ absolute_url(path('client_edit', {'slug': client.slug})) }}" class="btn btn-primary btn-lg">Modifier</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_start(delete_form, {'attr': {'onsubmit': 'return confirm("Êtes-vous sur de vouloir supprimer ce client ?");'}}) }}
                        <input type="submit" value="Supprimer" class="btn btn-danger btn-lg">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('ressources/datatable/dataTables.bootstrap4.min.css')) }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ absolute_url(asset('ressources/datatable/jquery.dataTables.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('ressources/datatable/dataTables.bootstrap4.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('ressources/js/custom-datatables.js')) }}"></script>
{% endblock %}
