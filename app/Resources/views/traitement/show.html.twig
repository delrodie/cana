{% extends 'base.html.twig' %}

{% block body %}
    <h1>Traitement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ traitement.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ traitement.libelle }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if traitement.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ traitement.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ traitement.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ traitement.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ traitement.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ traitement.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('traitement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('traitement_edit', { 'id': traitement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
