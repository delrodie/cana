                                                <input type="text" class="form-control" name="search" id="search-term" placeholder="Rechercher ici">
                                                <button type="button" class="btn btn-lorvens proclinic-bg">
                                                    <span class="ti-location-arrow"></span> Rechercher</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
