                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ absolute_url(path('client_new')) }}">Ajouter un client</a>
                                <a class="dropdown-item" href="{{ absolute_url(path('client_index')) }}">Tous les clients</a>
                            </div>
                        </li>
