{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Gestion des versements {% endblock %}

{% block body %}
    <div class="container mt-0">
        <div class="row breadcrumb-bar">
            <div class="col-md-6">
                <h3 class="block-title">Gestion de versements</h3>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ absolute_url(path('homepage')) }}">
                            <span class="ti-home"></span>
                        </a>
                    </li>
                    <li class="breadcrumb-item">versements</li>
                    <li class="breadcrumb-item active">versements</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="widget-area-2 proclinic-box-shadow">
                    <h3 class="widget-title">Suppression du versement</h3>
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-success alert-dismissible text-center fade show mt-2" role="alert">
                            <strong>{{ message }} </strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    {% endfor %}
                    {{ form_start(edit_form, {'attr': {'id': 'versement'}}) }}
                    <div class="row">
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_versement_marque">Facture</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="{{ versement.facture.numero }}">
                                    {{ form_widget(edit_form.facture) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_facture_rap">Verse</label>
                                <div class="col-md-8">
                                    {{ form_widget(edit_form.acompte) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-10">
                            <div class="row">
                                <label class="col-md-4 text-right" for="appbundle_versement_montant">Reste à payer</label>
                                <div class="col-md-8">
                                    {{ form_widget(edit_form.reste) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(edit_form) }}
                        <div class="form-group col-md-12 mb-5 text-right">
                            {{ form_start(delete_form, {'attr': {'onsubmit': 'return confirm("Êtes-vous sur de vouloir supprimer ce versement ?");'}}) }}
                            <input type="submit" value="Supprimer" class="btn btn-danger">
                            {{ form_end(delete_form) }}
                        </div>
                        <div class="text-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('ressources/datatable/dataTables.bootstrap4.min.css')) }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ absolute_url(asset('ressources/datatable/jquery.dataTables.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('ressources/datatable/dataTables.bootstrap4.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('ressources/js/custom-datatables.js')) }}"></script>
    <script src="{{ absolute_url(asset('ressources/js/versement.js')) }}"></script>
{% endblock %}
